extends layout

block content

  div(id="alert-banner" class="alert alert-success" role="alert") This is a success alertâ€”check it out
  div(class="container-flex d-flex h-100 flex-column")

    div(class="row d-flex homepage-button justify-content-center")
      a(href="/", class="btn")
        span(id="title" class="w-100") YTSharedQueue

    //- add this class to make the row fill the remaining height
    //- class=flex-fill
    div(class="row d-flex justify-content-center")
        div(class='col my-auto' style="margin: 10%;")
            div(class="row")
                span(id='queue-name' class='col')
                    i(id='copy-link-icon' class="btn bi bi-link-45deg" onclick='copyQueueLink()' data-bs-toggle="tooltip" data-bs-placement="top" title="Copy link")
                    =queueId
                    i(id='connected-icon', class="bi bi-wifi connection-status-icon", style="display: none;")
                    i(id='disconnected-icon', class="bi bi-wifi-off connection-status-icon")
            div(class="row")
                div(class='col-sm-6 my-auto')
                    div(class='child player', id='player')

                div(class='col-sm-6')
                    div(class='queue-info')
                        span(id='listeners') -
                        i(class="bi bi-person-fill listeners-icon")
                    div(class="input-group queue-push")
                        input(class="form-control mr-1", type="text", name="videoUrlInput", id="videoUrlInput", placeholder="Paste a link or search" autofocus)
                        button(class="btn btn-primary button-push-video", onclick='addToQueue()')
                            span(id="push-request-status-icon", role="status" aria-hidden="true")
                            ='Add to queue'

                    div(class="card", style="width: 100%;", id='queue')
                        div(class="card-header" id="current-video-title")
                        ul(class="list-group list-group-flush" id="queued-videos-titles")


        script(src='/javascripts/player.js')
        script(src='/javascripts/queue.js', queueId=queueId)
