extends layout

block content

  div(class='queue-connection container align-content-center flex-wrap')
    div(class="input-group")
      input(class="form-control mr-1", type="text", name="queueId", id="queueIdInput", value="", placeholder="Queue ID")
      button(class="btn btn-primary mr-1", onclick='connectToQueue()') Connect
      button(class="btn btn-primary", onclick='newQueue()') New queue


  div(id='current-queue', class="row")

    div(class="row")
      div(class='col-sm-12')
        p(id='queue-name')

    div(class="row justify-content-center h-100 flex-grow-1")
      div(class='col-sm-6')
        div(class='child player', id='player')

      div(class='col-sm-6')
        p(id='createdQueue')
        div(class='queue-controls')
          div(class="input-group queue-push")
            input(class="form-control mr-1", type="text", name="videoUrlInput", id="videoUrlInput", value="https://www.youtube.com/watch?v=zBJU9ndpH1Q", placeholder="URL")
            button(class="btn btn-primary", onclick='addToQueue()') Add to queue

          div(class="card", style="width: 100%;", id='queue')
            div(class="card-header" id="current-video-title")
            ul(class="list-group list-group-flush" id="queued-videos-titles")


    script(src='/javascripts/player.js')
    script(src='/javascripts/queue.js')

  div(id="footer") #{footer}
